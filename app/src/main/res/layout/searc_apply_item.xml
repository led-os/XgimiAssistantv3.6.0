<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="8dp"
    android:paddingTop="10dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff"
    android:orientation="vertical"
     >
     <RelativeLayout 
         android:layout_height="wrap_content"
         android:layout_width="match_parent">
         <com.xgimi.zhushou.widget.CircleImageView
             android:id="@+id/app_icon"
             android:layout_height="80dp"
             android:layout_width="80dp"
            />
         <TextView 
             android:layout_marginTop="5dp"
             android:id="@+id/app_name"
             android:layout_marginLeft="5dp"
             android:layout_toRightOf="@+id/app_icon"
             android:textSize="20sp"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="看见音乐就唱歌"
             />
         <TextView 
             android:id="@+id/app_banben"
             android:layout_below="@+id/app_name"
             android:layout_marginTop="5dp"
             android:layout_toRightOf="@+id/app_icon"
             android:layout_alignLeft="@+id/app_name"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="版本号  3.2.1"
             />
         
          <TextView 
              android:layout_alignBottom="@+id/app_icon"
              android:id="@+id/app_size"
             android:layout_below="@+id/app_banben"
             android:layout_marginTop="5dp"
             android:layout_toRightOf="@+id/app_icon"
             android:layout_alignLeft="@+id/app_name"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="大小  7.32M"
             />
          <Button
              android:focusable="false"
              android:focusableInTouchMode="false"
              android:layout_marginRight="7dp"
              android:id="@+id/iv_anzhuang"
              android:layout_alignParentRight="true"
              android:layout_alignBottom="@+id/app_icon"
              android:layout_height="30dp"
              android:textColor="#ffffff"
                android:textSize="15sp"
              android:text="远程安装"
              android:layout_width="wrap_content"
              android:background="@drawable/logo"/>
     </RelativeLayout>
    <HorizontalScrollView

        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/horscroview">
    </HorizontalScrollView>
</LinearLayout>