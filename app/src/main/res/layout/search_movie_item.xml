<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    >
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="115dp"
        android:scaleType="fitXY"
        android:layout_height="155dp"
        android:id="@+id/iv"
        android:src="@color/moren"/>
    <LinearLayout
        android:layout_toRightOf="@+id/iv"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/iv"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/text_color_bule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:id="@+id/tv"
        android:text="青云之志"
        android:singleLine="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/kind"
                android:textColor="@color/huise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="年代 "/>
            <TextView
                android:textColor="@color/huise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:id="@+id/time"
                android:layout_marginLeft="5dp"
                android:text="2016"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/huise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="主演 "
            android:singleLine="true"/>
        <TextView
            android:textColor="@color/huise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:id="@+id/actor"
            android:layout_marginLeft="5dp"
            android:text="青云之志"
            android:singleLine="true"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/huise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="地区 "/>
        <TextView
            android:textColor="@color/huise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:id="@+id/area"
            android:layout_marginLeft="5dp"
            android:text="内地"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="类别 "
            android:textSize="12sp"
            android:textColor="@color/huise"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_laiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="芒果TV"
            android:textSize="12sp"
            android:textColor="@color/huise"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_play"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/kuang"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/play_now"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/lijibofang"
                android:text="立即播放"
                android:textSize="13sp" />
        </LinearLayout>
        </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/fengexian"></View>
</RelativeLayout>