<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <RelativeLayout

        android:background="@drawable/sandidrawale"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tishi"
            android:textColor="@color/text_color_bule"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="是否安装搜狐视频"/>
        <TextView
            android:id="@+id/tv_tieshi"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tishi"
            android:layout_centerHorizontal="true"
            android:textColor="@color/huise"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="无屏助手推荐影迷必安装应用"/>
        <TextView

            android:id="@+id/tv_tieshi1"
            android:layout_below="@+id/tv_tieshi"
            android:layout_centerHorizontal="true"
            android:textColor="@color/huise"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="一键下载，无忧畅想"/>
        <View
            android:id="@+id/xian"
            android:layout_below="@+id/tv_tieshi1"
            android:layout_marginTop="20dp"
            android:layout_height="0.5dp"
            android:background="#19000000"
            android:layout_width="match_parent"
            />
        <LinearLayout
            android:layout_below="@+id/xian"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/cancel"
                android:background="@null"
                android:textColor="@color/text_color_bule"
                android:textSize="18sp"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="取消"
                />
            <View
                android:layout_height="match_parent"
                android:background="#19000000"
                android:layout_width="0.5dp"
                />
            <Button
                android:id="@+id/install"
                android:textColor="@color/color_bule"
                android:background="@null"
                android:textSize="18sp"
                android:layout_height="50dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="安装"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>