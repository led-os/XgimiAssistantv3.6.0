<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="100dp">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:id="@+id/iv"
        android:src="@color/moren"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/text_color_bule"
            android:layout_width="wrap_content"
            android:text="悟空遥控器"
            android:textSize="16sp"
            android:id="@+id/title"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:text="20.5M "
                android:textColor="#ADADAD"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:text="射击飞行"
                android:id="@+id/kind"
                android:textColor="@color/item_title"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="18298"
            android:id="@+id/much"
            android:textColor="@color/huise"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:text=" 人玩过"
                android:id="@+id/tv_install"
                android:textColor="@color/huise"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装到TV"
        android:textSize="15dp"
        android:textColor="@color/color_bule"
        android:background="@drawable/app_install"
        android:layout_toLeftOf="@+id/close"
        android:layout_centerVertical="true"/>

</RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/more"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/fengexian"
            />
        <TextView
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/color_bule"
            android:text="查看更多"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/jiangese"
            />
    </LinearLayout>

</LinearLayout>
