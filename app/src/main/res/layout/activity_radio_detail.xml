<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_all"
    android:background="#ffffff"
    tools:context="com.xgimi.zhushou.activity.RadioDetailActivity"
   >
    <include
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:id="@+id/netconnect"
        android:layout_height="match_parent"
        layout="@layout/net_connect"
        android:layout_width="match_parent"/>
    <RelativeLayout
        android:id="@+id/rl_gaosi"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="244dp">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@drawable/gimi_back"/>
        <TextView
            android:id="@+id/zhuanji"
            android:layout_centerInParent="true"
            android:textColor="@color/main_white"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑"/>
            <ImageView
                android:id="@+id/bofang"
                android:visibility="gone"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/music"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/daohang"/>
        <ImageView
            android:id="@+id/daohang"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gimi_yaokong"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:background="@drawable/music_touxiang_beijing">
        <ImageView
            android:id="@+id/iv_radio"
            android:layout_width="118dp"
            android:layout_height="118dp"
           android:scaleType="fitXY"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_radio"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/title"
            android:textColor="@color/main_white"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在路上"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
           />
        </RelativeLayout>
        <ImageView
            android:id="@+id/collect"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/shoucang_radio"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_jieguo"
        android:layout_below="@+id/rl_gaosi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/fenge"
            android:id="@+id/xuanze"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/xiangqing"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="详情"
                android:textColor="@color/text_color_bule"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/jiemu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="节目"
                android:textColor="@color/text_color_bule"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/xiangsi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="相似"
                android:textColor="@color/text_color_bule"
                android:textSize="17sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fengexian">
        <ImageView
            android:id="@+id/indicator"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:background="@color/color_bule" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/xiantiao"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

</RelativeLayout>
