<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/weixuanzhong" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/select">

        <TextView
            android:id="@+id/geming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="冬天的秘密"
            android:textColor="@color/item_title"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/zuozhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geming"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="周传熊"
            android:textColor="#919191"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/xiugaitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geming"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/zuozhe"
            android:singleLine="true"
            android:text="1996"
            android:textColor="#919191"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/cancell"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>