<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/guanggaowei">
        <com.xgimi.zhushou.widget.ViewFlow
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/guanggaowei">
        </com.xgimi.zhushou.widget.ViewFlow>

        <LinearLayout
            android:id="@+id/ll_dian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_marginRight="5dp">
            <ImageView
                android:visibility="gone"
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lll_rukou"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="90dp">
        <LinearLayout
            android:id="@+id/ll_file"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/chuanwenjian"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="传输文件"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_phone"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/phoneziyuan"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="手机资源"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/ll_tv"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/img_video_history"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="最近观看"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/ll_image"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/home_image"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="镜像"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_video"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/webvideo"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="网络投屏"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/jiangese"
        android:layout_height="10dp"></View>
</LinearLayout>
