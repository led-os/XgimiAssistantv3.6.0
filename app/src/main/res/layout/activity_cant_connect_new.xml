<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jiangese">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >
        <include
            layout="@layout/xgimi_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/title"></include>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_below="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/search_device_kuang">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.使用扫描连接方式"
            android:textSize="20sp"
            android:textColor="@color/item_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scanimage"
            android:layout_below="@+id/title" />
        <TextView
            android:id="@+id/tv_tips_camare"
            android:layout_below="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/scan_tishi"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="在同一WIFI下，打开无屏电视上的无屏助手TV，扫描屏幕中间的二维码连接无屏助手"/>

        <TextView
            android:id="@+id/tv_scan_type_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.输入IP"
            android:textSize="20sp"
            android:textColor="@color/item_title"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_tips_camare"/>

        <TextView
            android:id="@+id/tv_tips_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/scan_tishi"
            android:text="IP地址查看方法“网络终端-无线设置/有线网络-已连接网络-IP地址”"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tv_scan_type_ip"/>
        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_below="@+id/rl_one"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_connect_tv"
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码连接"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_scan_by_ip"
        android:layout_below="@+id/rl_one"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_connect_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入IP"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

</RelativeLayout>