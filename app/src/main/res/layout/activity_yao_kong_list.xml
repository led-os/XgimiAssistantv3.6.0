<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:orientation="vertical">

    <include
        android:id="@+id/local_yingyong_title"
        layout="@layout/xgimi_title"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/local_yingyong_title"
        android:background="@drawable/kuang"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/local_yingyong_title"
        android:orientation="horizontal">

        <com.xgimi.zhushou.widget.YaokongTitle
            android:id="@+id/baobaoxiang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/titlebackground"></com.xgimi.zhushou.widget.YaokongTitle>

        <com.xgimi.zhushou.widget.YaokongTitle
            android:id="@+id/fangxiangjian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/titlebackground"></com.xgimi.zhushou.widget.YaokongTitle>

        <com.xgimi.zhushou.widget.YaokongTitle
            android:id="@+id/chumo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/titlebackground"
            android:focusable="true"
            android:focusableInTouchMode="true">

        </com.xgimi.zhushou.widget.YaokongTitle>

        <com.xgimi.zhushou.widget.YaokongTitle
            android:id="@+id/youxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/titlebackground"
            android:visibility="gone">

        </com.xgimi.zhushou.widget.YaokongTitle>

        <com.xgimi.zhushou.widget.YaokongTitle
            android:id="@+id/yuyin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/titlebackground"></com.xgimi.zhushou.widget.YaokongTitle>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:background="#ffffff"></RelativeLayout>

    <ImageView
        android:id="@+id/sanjiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="-1dp"
        android:src="@drawable/sanjiao" />
</RelativeLayout>
