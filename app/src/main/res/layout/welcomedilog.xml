<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:layout_height="wrap_content"
        android:src="@drawable/welcomeclose"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_below="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcomexian"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/image"
          android:background="@drawable/welconeyuanjiao"
        >
    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcomebackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_bule"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/background">
        <TextView
            android:id="@+id/banben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:textColor="@color/item_title"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:text="发现新版本"/>
        <TextView
            android:scrollbars="vertical"
            android:text="a"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="12dp"
            android:textColor="#4D4D4D"
            android:fadeScrollbars="true"
            android:textSize="13sp"
            android:id="@+id/tv_diary"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_button"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welcomebutton"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_white"
            android:text="立即升级"
            android:id="@+id/text2"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            />
    </RelativeLayout>

      </RelativeLayout>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rocket"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>




    <RelativeLayout
        android:visibility="gone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/welconeyuanjiao"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="发现新版本"
            android:textColor="@color/item_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/fenge"
        android:layout_below="@+id/rl_one"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/EBEBEB"/>
    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_below="@+id/fenge"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:textColor="#4D4D4D"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
        <View
            android:id="@+id/fenge1"
            android:layout_below="@+id/rl_two"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/EBEBEB"/>
        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_below="@+id/fenge1"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="稍后再说"
                android:textColor="@color/welcometext"
                android:textSize="16dp"
                android:layout_weight="1"
                android:gravity="center"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/fengexianone"
                    ></View>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="立即更新"
                    android:textColor="@color/shanchujilu"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>