<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >
        <include
            layout="@layout/xgimi_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/title"></include>
    </android.support.v7.widget.Toolbar>
    <include
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:id="@+id/netconnect"
        android:layout_height="match_parent"
        layout="@layout/net_connect"
        android:layout_width="match_parent"/>
    <ScrollView
        android:layout_below="@+id/id_toolbar"
        android:id="@+id/scrollview"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#ffffff"
        >
        <LinearLayout
            android:id="@+id/lin_scro"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <View
                android:layout_height="10dp"
                android:layout_width="match_parent"
                android:background="#f5f5f7"/>
            <include
                android:id="@+id/jietu"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/movie_titile_sample" />
            <RelativeLayout
                android:layout_height="140dp"
                android:layout_width="wrap_content">
                <HorizontalScrollView
                    android:paddingBottom="10dp"
                    android:scrollbars="none"
                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:background="#ffffff"
                    android:id="@+id/horscrollview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    >
                </HorizontalScrollView>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/shoucang"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/shoucang_radio"/>
                <!--android:background="@drawable/cornenrbackground"-->
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:layout_toLeftOf="@+id/shoucang"
                    android:layout_marginRight="10dp"
                    android:id="@+id/share"
                    android:background="@drawable/cornenrbackground"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/share"/>
            </RelativeLayout>
            <View
                android:layout_height="10dp"
                android:layout_width="match_parent"
                android:background="#f5f5f7"/>
            <include
                android:id="@+id/jianjie"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/movie_titile_sample" />
            <LinearLayout
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#ffffff">
                <RelativeLayout
                    android:layout_marginLeft="17dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:textColor="#A6A6A6"
                        android:textSize="17sp"
                        android:id="@+id/tv_yaokong"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="遥控方式 :"/>
                    <TextView
                        android:textColor="#5E5E5E"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        android:id="@+id/tv_is_zhichi"
                        android:layout_toRightOf="@+id/tv_yaokong"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="17dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:textColor="#A6A6A6"
                        android:textSize="17sp"
                        android:id="@+id/tv_size"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="应用大小: "/>
                    <TextView
                        android:textColor="#5E5E5E"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        android:id="@+id/tv_size_is"
                        android:layout_toRightOf="@+id/tv_size"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:textColor="#A6A6A6"
                        android:textSize="17sp"
                        android:id="@+id/tv_update"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="更新时间: "/>
                    <TextView
                        android:textColor="#5E5E5E"
                        android:layout_marginLeft="10dp"
                        android:textSize="17sp"
                        android:id="@+id/tv_update_is"
                        android:layout_toRightOf="@+id/tv_update"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="17dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:textColor="#A6A6A6"
                        android:textSize="17sp"
                        android:id="@+id/tv_xiangqing"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="应用详情: "/>
                    <TextView
                        android:lineSpacingExtra="4dp"
                        android:paddingRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#5E5E5E"
                        android:textSize="17sp"
                        android:id="@+id/tv_informaton"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_height="70dp"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:layout_height="70dp"
        android:layout_width="match_parent">
        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/baise"
            android:textSize="17sp"
            android:background="@drawable/logo"
            android:text="远程安装"
            android:id="@+id/anzhuang"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:src="@drawable/yuanchenganzhuang"/>
    </RelativeLayout>
</RelativeLayout>
