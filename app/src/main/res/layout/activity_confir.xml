<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f7"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/xgimi_title" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@drawable/phoneregest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/name"
            style="@style/UserEditText_FontSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_item_height"
            android:hint="输入密码"
            android:password="true"
            android:maxLength="15"
            android:textColor="@color/item_title"
            android:textSize="15sp" />
        <View 
            android:layout_below="@+id/name"
            android:id="@+id/view_xian"
            android:background="#19000000"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"/>
           <EditText
               android:id="@+id/name_one"
                android:password="true"
               android:layout_below="@+id/view_xian"
            style="@style/UserEditText_FontSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_item_height"
            android:hint="再次输入密码"
            android:maxLength="15"
               android:textColor="@color/item_title"
            android:textSize="15sp" />
             <View 
            android:layout_below="@+id/name_one"
            android:id="@+id/view_xian_one"
            android:background="#19000000"
            android:layout_height="0.5dp"
            android:layout_width="match_parent"/>
             <EditText
                 android:layout_below="@+id/view_xian_one"
               android:id="@+id/name_two"
            style="@style/UserEditText_FontSize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_item_height"
            android:hint="输入用户名"
            android:maxLength="15"
                 android:textColor="@color/item_title"
            android:textSize="15sp" />

    </RelativeLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/zhuce"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo"
        android:text="注册"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>