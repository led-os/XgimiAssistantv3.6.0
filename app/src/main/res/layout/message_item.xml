<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_scrollview"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="12dp"
    android:layout_height="wrap_content"
    android:background="#ffffff" >
<LinearLayout 
    android:id="@+id/rl_louzhu"
    android:visibility="gone"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="10dp">
    
<ImageView 
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    android:layout_width="50dp"
    android:layout_gravity="center_vertical"
    android:src="@drawable/app_icon"/>
<TextView 
    android:id="@+id/louzhu"
    android:layout_height="wrap_content"
    android:background="@drawable/message_one"
    android:text="极米科技有限公司"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    />
</LinearLayout>

<RelativeLayout 
    android:id="@+id/rl_user"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <TextView 
        android:id="@+id/user"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="遥控器为什么不能使用"
        android:textColor="#ffffff"
        android:background="@drawable/two"/>
    <com.xgimi.zhushou.widget.yuanxing
        android:id="@+id/iv_user"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/touxiao"/>
</RelativeLayout>

</RelativeLayout>